
<div class="" style="margin-top: 150px">
  <h1>Sign Up</h1>

  <%= simple_form_for @user do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password, as: :string %>
    <%= f.input :password_confirmation %>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
